<div class="row">
	<div class="col-md-12">
		<h1 class="text-center">List of Stories</h1>
	</div>
</div>
<br>
<div class="row">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<ul class="list-group">
			<% @stories.each do |story| %>
				<li class="list-group-item"><h4><%= link_to "Story " + story.id.to_s + ": " + story.name, show_story_path(story_id: story.id) %></h4></li>
			<% end %>
		</ul>
	</div>
	<div class="col-md-2"></div>
</div>